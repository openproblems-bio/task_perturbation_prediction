  VIASH_PAR_OUTPUT_MODEL=$(ViashDockerAutodetectMount "$VIASH_PAR_OUTPUT_MODEL")
  VIASH_CHOWN_VARS+=( "$VIASH_PAR_OUTPUT_MODEL" )
