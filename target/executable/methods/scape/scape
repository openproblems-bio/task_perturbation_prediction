  echo "        type: integer"
  echo "        default: 300"
  echo "        Number of epochs for coarse training."
  echo ""
  echo "    --epochs_enhanced"
  echo "        type: integer"
  echo "        default: 800"
  echo "        Number of epochs for enhanced training."
  echo ""
  echo "    --n_genes"
  echo "        type: integer"
  echo "        default: 64"
  echo "        The number of genes for coarse training."
  echo ""
  echo "    --n_genes_enhanced"
  echo "        type: integer"
  echo "        default: 256"
  echo "        The number of genes for enhanced training."
  echo ""
