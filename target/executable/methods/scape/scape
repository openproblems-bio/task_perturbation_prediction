  echo "        type: integer"
  echo "        The number of drugs to consider for coarse training. If none, all drugs"
  echo "        are considered."
  echo ""
  echo "    --min_n_top_drugs"
  echo "        type: integer"
  echo "        default: 50"
  echo "        The minimum number of top drugs to consider."
}

# initialise variables
