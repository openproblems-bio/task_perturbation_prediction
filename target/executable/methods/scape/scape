  echo ""
  echo "    --output"
  echo "        type: file, required parameter, output, file must exist"
  echo "        example: resources/datasets/neurips-2023-data/prediction.h5ad"
  echo ""
  echo "    --output_model"
  echo "        type: file, output"
  echo "        example: resources/datasets/neurips-2023-data/model"
  echo ""
  echo "    --cell"
  echo "        type: string"
  echo "        default: NK cells"
  echo "        Pre-defined cell type held for pre-training."
