  exit 1
fi
if [ ! -z "$VIASH_PAR_PSEUDOBULK_FILTERED_WITH_UNS" ] && [ ! -e "$VIASH_PAR_PSEUDOBULK_FILTERED_WITH_UNS" ]; then
  ViashError "Output file '$VIASH_PAR_PSEUDOBULK_FILTERED_WITH_UNS' does not exist."
  exit 1
fi


