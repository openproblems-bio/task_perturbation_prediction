# create parent directories of output files, if so desired
if [ ! -z "$VIASH_PAR_DE_TRAIN" ] && [ ! -d "$(dirname "$VIASH_PAR_DE_TRAIN")" ]; then
  mkdir -p "$(dirname "$VIASH_PAR_DE_TRAIN")"
fi
if [ ! -z "$VIASH_PAR_DE_TEST" ] && [ ! -d "$(dirname "$VIASH_PAR_DE_TEST")" ]; then
  mkdir -p "$(dirname "$VIASH_PAR_DE_TEST")"
fi
if [ ! -z "$VIASH_PAR_ID_MAP" ] && [ ! -d "$(dirname "$VIASH_PAR_ID_MAP")" ]; then
  mkdir -p "$(dirname "$VIASH_PAR_ID_MAP")"
fi
if [ ! -z "$VIASH_PAR_SC_TRAIN" ] && [ ! -d "$(dirname "$VIASH_PAR_SC_TRAIN")" ]; then
  mkdir -p "$(dirname "$VIASH_PAR_SC_TRAIN")"
fi
if [ ! -z "$VIASH_PAR_SC_TEST" ] && [ ! -d "$(dirname "$VIASH_PAR_SC_TEST")" ]; then
  mkdir -p "$(dirname "$VIASH_PAR_SC_TEST")"
